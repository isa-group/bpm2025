---
export interface Props {
  label?: string;
  class?: string;
}

const {
  label = 'Toggle Menu',
  class: className = 'flex flex-col h-12 w-12 rounded-xs justify-center items-center cursor-pointer group'
} = Astro.props;
---

<button type="button" class={className} aria-label={label} data-aw-toggle-menu>
  <span class="sr-only">{label}</span>
  <slot>
    <span
      aria-hidden="true"
      class="my-1 h-0.5 w-6 transform rounded-full bg-black opacity-80 transition duration-200 ease group-[.expanded]:translate-y-2.5 group-[.expanded]:rotate-45 dark:bg-white"
    >
    </span>
    <span
      aria-hidden="true"
      class="my-1 h-0.5 w-6 transform rounded-full bg-black opacity-80 transition duration-200 ease dark:bg-white group-[.expanded]:opacity-0"
    >
    </span>
    <span
      aria-hidden="true"
      class="my-1 h-0.5 w-6 transform rounded-full bg-black opacity-80 transition duration-200 ease dark:bg-white group-[.expanded]:-translate-y-2.5 group-[.expanded]:-rotate-45"
    >
    </span>
  </slot>
</button>

<style>
  [data-aw-toggle-menu] path {
    --at-apply: transition;
  }

  [data-aw-toggle-menu].expanded g > path:first-child {
    --at-apply: -rotate-45 translate-y-[15px] translate-x-[-3px];
  }

  [data-aw-toggle-menu].expanded g > path:last-child {
    --at-apply: rotate-45 translate-y-[-8px] translate-x-[14px];
  }
</style>
