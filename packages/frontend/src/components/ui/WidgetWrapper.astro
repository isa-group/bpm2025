---
import type { HTMLTag } from 'astro/types';
import type { Widget } from '#/types';
import { twMerge } from 'tailwind-merge';
import { isBool, isObj, isStr } from '@bpm2025-website/shared/validation';

export interface Props extends Widget {
  containerClass?: string;
  ['as']?: HTMLTag;
}

const {
  id,
  isDark = false,
  containerClass = '',
  bg,
  as = 'section'
} = Astro.props;

const WrapperTag = as;
const isBgImage = isObj(bg) && isStr(bg.src);
---

<WrapperTag
  class="relative not-prose scroll-mt-[72px] dark:bg-transparent"
  {...id ? { id } : {}}
  style={isBgImage
    ? {
        backgroundImage: `url(${bg.src})`
      }
    : undefined}
  class:list={[{
    'bg-dark': isDark && !isBgImage,
    'bg-blue-50': isBool(bg)
  }]}>
  <div
    class:list={[
      twMerge('relative mx-auto max-w-7xl px-4 md:px-6 py-12 md:py-16 lg:py-20 text-default', containerClass),
      { dark: isDark }
    ]}
  >
    <slot />
  </div>
</WrapperTag>
