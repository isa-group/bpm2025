---
import BSlot from '@/components/utils/BSlot.astro';
import type { CallToAction as Props } from '@/types';

const {
  text = Astro.slots.render('default')
} = Astro.props;
---

<Fragment set:html={text} />
<BSlot class="w-5 h-5 ml-1 -mr-1.5 rtl:mr-1 rtl:-ml-1.5 inline-block">
  <slot name="icon" />
</BSlot>
