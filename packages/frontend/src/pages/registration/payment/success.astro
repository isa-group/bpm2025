---
import Layout from '#/layouts/Layout.astro';
import { getHomePermalink } from '#/utils/permalinks';
---

<Layout metadata={{ title: '✔️ Payment confirmed' }}>
  <section class="flex items-center h-full p-16">
    <div class="container flex flex-col items-center justify-center px-5 mx-auto my-8">
      <div class="max-w-md text-center">
        <h2 class="mb-8 font-bold text-9xl">
          <span>🎉</span>
        </h2>
        <p class="text-3xl">Your payment has been confirmed</p>
        <br />
        <br />
        <br />
        <p class="text-xl font-semibold">We look forward to seeing you in Seville!</p>
      </div>
      <a rel="noopener noreferrer" href={getHomePermalink()} class="btn ml-4 mt-4">Go to homepage</a>
    </div>
  </section>
</Layout>
