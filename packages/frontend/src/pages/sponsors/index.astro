---
import PageLayout from '#/layouts/PageLayout.astro';
import Headline from '#/components/ui/Headline.astro';
import Sponsors from '#/components/ui/Sponsors.astro';
import { getPermalink } from '#/utils/permalinks';
import WidgetWrapper from '#/components/ui/WidgetWrapper.astro';
---

<PageLayout
  metadata={{
    title: 'Sponsors',
    description: 'We are very happy and grateful to have received support from the following sponsors'
  }}
  heroProps={{
    actions: [{ variant: 'primary', text: 'Check out sponsorship opportunities', href: getPermalink('/sponsors/become-a-sponsor') }]
  }}>
  <Fragment slot="hero-subtitle">
    We are very happy and grateful to have received support from the following sponsors
    <br />
    Sign up to sponsor BPM2025 and help make the conference happen.
  </Fragment>

  <WidgetWrapper>
    <Headline
      classes={{ container: 'pt-6 !mb-0' }}
      title="Organization & Sponsors"
      subtitle="These organizations make the BPM conference possible" />
  </WidgetWrapper>
  <Sponsors description />
</PageLayout>
