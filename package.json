{
  "name": "bpm2025-website",
  "private": true,
  "type": "module",
  "description": "The 2025 BPM Conference website",
  "workspaces": [
    "packages/**/*"
  ],
  "engines": {
    "node": ">=22.11.0 <23.0.0",
    "npm": ">=10.9.0",
    "yarn": "yarn is not supported. Please use npm",
    "pnpm": "pnpm is not supported. Please use npm"
  },
  "scripts": {
    "lint": "npm run lint -ws --include-workspace-root=false",
    "lint:fix": "npm run lint:fix -ws --include-workspace-root=false",
    "check": "npm run check -ws --include-workspace-root=false"
  },
  "devDependencies": {
    "@eslint/config-inspector": "1.3.0",
    "@iconify/json": "2.2.391",
    "@types/node": "24.6.2",
    "@vite-pwa/astro": "1.1.0",
    "eslint": "9.37.0",
    "jiti": "2.6.1",
    "type-fest": "4.41.0",
    "typescript": "5.9.3",
    "vite-plugin-pwa": "1.0.3",
    "workbox-window": "7.3.0"
  },
  "overrides": {
    "stylus": "0.64.0"
  },
  "dependencies": {
    "@bpm2025-website/frontend": "*"
  }
}
