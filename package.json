{
  "name": "bpm2025-website",
  "private": true,
  "type": "module",
  "description": "The 2025 BPM Conference website",
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=22.11.0 <23.0.0",
    "npm": ">=10.9.0",
