{
  "name": "bpm2025-website",
  "private": true,
  "type": "module",
  "description": "The 2025 BPM Conference website",
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=22.11.0 <23.0.0",
    "npm": ">=10.9.0",
    "yarn": "yarn is not supported. Please use npm",
    "pnpm": "pnpm is not supported. Please use npm"
  },
  "scripts": {
    "lint": "npm run lint -ws --include-workspace-root=false",
    "lint:fix": "npm run lint:fix -ws --include-workspace-root=false",
    "check": "npm run check -ws --include-workspace-root=false"
  },
  "devDependencies": {
    "@eslint/config-inspector": "1.1.0",
    "@types/node": "24.0.4",
    "eslint": "9.29.0",
    "jiti": "2.4.2",
    "typescript": "5.8.3"
  }
}
